#!/bin/bash

set -ueo pipefail

HOOKS_DIR="$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd)"

OS=${BUILDKITE_PLUGIN_DHALL_SECRET_OS:-"linux"}
BIN_DIR="${HOOKS_DIR}/../bin"
mkdir -p "$BIN_DIR"

curl -L "https://github.com/jcouyang/dhall-secret/releases/download/v0.4.32/dhall-secret-x86_64-${OS}" -o "$BIN_DIR/dhall-secret"
